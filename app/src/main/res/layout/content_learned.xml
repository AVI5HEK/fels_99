<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              tools:context="com.framgia.elsytem.LearnedActivity"
              tools:showIn="@layout/activity_learned"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/content_profile_linear1_paddingtop"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back_btn"
            android:layout_width="@dimen/wordlist_layoutwidth"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/categoryrowborder_padding"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:text="@string/back"
            />

        <TextView
            android:layout_width="@dimen/wordlist_layoutwidth"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/categoryrowborder_padding"
            android:layout_marginTop="@dimen/categoryrowborder_padding"
            android:layout_weight="2"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="@string/wordlist"
            android:textAlignment="center"
            android:textSize="@dimen/text_title_activity_register_text_size"
            />

        <Button
            android:layout_width="@dimen/wordlist_layoutwidth"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/categoryrowborder_padding"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:text="@string/pdf"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="@dimen/wordlist_layoutwidth"
            android:layout_height="wrap_content"
            android:layout_weight="1"
           ></Spinner>

        <Spinner
            android:layout_width="@dimen/wordlist_layoutwidth"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/progress_of_learning"></Spinner>
    </LinearLayout>

    <ListView
        android:id="@+id/learned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
